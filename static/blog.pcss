/* HEADER */

nav.header {
  & a {
    text-transform: uppercase;
    margin: 0 32px;
  }
  & a.active {
    border-bottom: 2px solid #555
  }
  & a:hover {
    text-decoration: none;
  }
  margin: 32px 0 64px 0;
  text-align: center;
  font-size: 1.3em;
}

.container {
  max-width: 800px;
  margin: auto;
}

html {
  background: #f5f5f5;
}

.posts {
  padding: 0;
  & .title {
    font-size: 2em;
  }
}

.card {
  list-style: none;
  background: white;
  padding: 40px 64px;
  margin: 40px 0;
}
