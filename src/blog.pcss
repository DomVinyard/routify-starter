/* HEADER */
nav.header {
  & a {
    text-transform: uppercase;
    padding-right: 32px;
  }
  & a.active {
    font-weight: bold;
  }
  margin-bottom: 64px;
}

.container {
  max-width: 800px;
  margin: auto;
}

html {
  background: #f5f5f5;  
}

.posts {
  padding: 0;
    & .title {
      color: #333;
      font-size: 2em;
    }
  
}

.card {
  color: #777;
  list-style: none;   
  background: white;
  padding: 40px 64px;
  margin: 40px 0;    
}
